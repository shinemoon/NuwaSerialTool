{
	"name": "Nuwa Serial Port Debug Tool",
	"version": "0.3",
	"description": "Serial Port Debug Tool",
	"short_name":"Nuwa",
  	"app": {
		"background":{
			"page":"background.html",
			"persistent":true
		}
	 },
	"manifest_version": 2,
	"icons": {
	"16": "images/icon.png",
	"48": "images/blank.png",
	"128": "images/blank.png"
  	},
	"sandbox":{
		"pages":["sandbox.html"]
	},
  	"permissions": [
		"storage",
  		"unlimitedStorage",
  		"notifications",
		"serial",
		"<all_urls>"
	],
	"offline_enabled": true
}
